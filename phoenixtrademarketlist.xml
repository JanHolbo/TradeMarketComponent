<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.2.0" method="upgrade">

	<name>Phoenix BSE Trade Market List</name>
	<!-- The following elements are optional and free of formatting constraints -->
	<creationDate>September 2017</creationDate>
	<author>Jan Rasmussen</author>
	<authorEmail>jan@kaddu.dk</authorEmail>
	<authorUrl>http://www.kaddu.dk</authorUrl>
	<copyright>Copyright 2017 by Jan Rasmussen</copyright>
	<license>This Joomla Component is licensed under the GPL V3</license>
	<!--  The version string is recorded in the components table -->
	<version>0.0.3</version>
	<!-- The description is optional and defaults to the name -->
	<description>Description of the Phoenix BSE Trade Market List component ...</description>

	<update> <!-- Runs on update; New since J2.5 -->
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
		</schemas>
	</update>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->
	<files folder="site">
		<filename>index.html</filename>
		<filename>phoenixtrademarketlist.php</filename>
		<filename>controller.php</filename>
		<folder>views</folder>
	</files>

	<administration>
		<!-- Administration Menu Section -->
		<menu link='index.php?option=com_phoenixtrademarketlist'>Phoenix BSE Trade Market List</menu>
		<!-- Administration Main File Copy Section -->
		<!-- Note the folder attribute: This attribute describes the folder
			to copy FROM in the package to install therefore files copied
			in this section are copied from /admin/ in the package -->
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>phoenixtrademarketlist.php</filename>
			<!-- SQL files section -->
			<folder>sql</folder>
		</files>
	</administration>

</extension>
